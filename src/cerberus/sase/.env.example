# SASE Environment Configuration
# Copy to .env and configure for your deployment

# === Deployment Configuration ===
SASE_DEPLOYMENT=single_node
SASE_NODE_ID=sase-node-1
SASE_CLUSTER_NODES=sase-node-1

# === GeoIP Service ===
SASE_GEOIP_ENABLED=false
SASE_GEOIP_API_URL=https://ipapi.co/{ip}/json/
SASE_GEOIP_API_KEY=

# === ASN Lookup ===
SASE_ASN_ENABLED=false
SASE_ASN_API_URL=https://api.bgpview.io/ip/{ip}

# === Tor Detection ===
SASE_TOR_LIST_URL=https://check.torproject.org/torbulkexitlist
SASE_TOR_REFRESH_HOURS=6

# === HSM Configuration ===
SASE_HSM_ENABLED=false
SASE_HSM_TYPE=software

# YubiHSM (if using)
YUBIHSM_CONNECTOR_URL=http://localhost:12345
YUBIHSM_AUTH_KEY_ID=1
YUBIHSM_PASSWORD=

# AWS CloudHSM (if using)
AWS_CLOUDHSM_CLUSTER_ID=
AWS_CLOUDHSM_USER=
AWS_CLOUDHSM_PASSWORD=

# === Blockchain Anchoring ===
SASE_BLOCKCHAIN_ENABLED=false
SASE_BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_RPC_URL=
BLOCKCHAIN_PRIVATE_KEY=

# === Observability ===
SASE_PROMETHEUS_ENABLED=true
SASE_PROMETHEUS_PORT=9090
PROMETHEUS_PUSHGATEWAY=

SASE_GRAFANA_ENABLED=true
SASE_GRAFANA_PORT=3000

# === Model Configuration ===
SASE_MODEL_VERSION=1.0.0
SASE_DRIFT_DETECTION=true
SASE_AUTO_RETRAIN=false

# === Thresholds ===
SASE_THRESHOLD_ALERT=30
SASE_THRESHOLD_CONTAINMENT=50
SASE_THRESHOLD_CRITICAL=70
