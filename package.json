{
  "name": "project-ai",
  "version": "1.0.1",
  "description": "A constitutionally governed, sovereign-grade AI platform with cryptographic audit trails and enforced ethical behavior",
  "main": "src/app/main.py",
  "scripts": {
    "test": "npm run test:js && npm run test:python",
    "test:js": "node --test src/**/*.test.js",
    "test:python": "pytest -q",
    "lint": "npm run lint:python && npm run lint:js",
    "lint:python": "ruff check .",
    "lint:js": "eslint --ext .js,.jsx src/ --max-warnings 0",
    "lint:fix": "npm run lint:python:fix && npm run lint:js:fix",
    "lint:python:fix": "ruff check . --fix",
    "lint:js:fix": "eslint --ext .js,.jsx src/ --fix",
    "format": "ruff check . --fix",
    "validate": "python scripts/validate_all_code.py",
    "validate:fast": "python scripts/validate_all_code.py --fast",
    "validate:fix": "python scripts/validate_all_code.py --fix",
    "dev": "docker-compose up",
    "build": "docker build -t project-ai:latest .",
    "lint:markdown": "markdownlint README.md PROGRAM_SUMMARY.md docs docs/developer --config .markdownlint.json",
    "tarl:build": "python -m tarl.build.cli build",
    "tarl:clean": "python -m tarl.build.cli clean",
    "tarl:list": "python -m tarl.build.cli list",
    "tarl:cache": "python -m tarl.build.cli cache stats"
  },
  "keywords": [
    "ai",
    "assistant",
    "pyqt6",
    "machine-learning",
    "desktop",
    "constitutional-ai",
    "asimov-laws",
    "cryptographic-audit",
    "ethical-ai",
    "open-source"
  ],
  "author": "Project AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IAmSoThirsty/Project-AI"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.2.5"
  }
}