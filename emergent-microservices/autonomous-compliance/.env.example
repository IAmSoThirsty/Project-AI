# Environment Configuration
ENVIRONMENT=development

# Service
SERVICE_NAME=Autonomous Compliance-as-Code Engine
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# Database
DB_POOL_SIZE=20
DB_TIMEOUT=30

# Security
API_KEYS=dev-key-1,dev-key-2,dev-key-3
API_KEY_HEADER=X-API-Key
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
# Rate Limiting
RATE_LIMIT_PER_MINUTE=250
RATE_LIMIT_BURST=500

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Observability
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

# Features
ENABLE_API_DOCS=true
