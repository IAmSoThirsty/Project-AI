# Project-AI environment template
#
# Copy this file to `.env` and fill in values for local development.
# DO NOT commit real secrets.

# OpenAI API key (optional; used by learning paths / chat / DALLÂ·E backend)
# Get from: https://platform.openai.com/api-keys
# Format: sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_API_KEY=

# Hugging Face API key (optional; used by Stable Diffusion backend and DeepSeek V3.2)
# Get from: https://huggingface.co/settings/tokens
# Format: hf_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
HUGGINGFACE_API_KEY=

# SMTP credentials for emergency alerts (optional)
# Gmail: Use app password from https://myaccount.google.com/apppasswords
SMTP_USERNAME=
SMTP_PASSWORD=

# Fernet key used for encrypting location history and other secrets
# Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Format: Base64-encoded 32-byte key (44 characters ending with =)
FERNET_KEY=

# Optional: set application directories
DATA_DIR=data
LOG_DIR=logs

# Optional: Cloud sync endpoint for cross-device synchronization
# If not set, cloud sync features will be disabled
CLOUD_SYNC_URL=
