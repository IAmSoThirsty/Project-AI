# Project-AI environment template
#
# Copy this file to `.env` and fill in values for local development.
# DO NOT commit real secrets.

# OpenAI API key (optional; used by learning paths / chat / DALLÂ·E backend)
OPENAI_API_KEY=

# Hugging Face API key (optional; used by Stable Diffusion backend)
HUGGINGFACE_API_KEY=

# SMTP credentials for emergency alerts (optional)
SMTP_USERNAME=
SMTP_PASSWORD=

# Fernet key used for encrypting location history and other secrets
# Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# Optional: set application directories
DATA_DIR=data
LOG_DIR=logs

# The_Triumvirate Web Frontend Configuration
# Enable/disable the Triumvirate web interface
ENABLE_TRIUMVIRATE=false
# API URL for Vite frontend (development)
VITE_API_URL=http://localhost:5000
# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:5000
# Development server port
TRIUMVIRATE_PORT=3000
# Keep legacy frontend as fallback
LEGACY_FRONTEND=true
