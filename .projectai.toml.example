# Project-AI Configuration File Example
# Save this as ~/.projectai.toml (user config) or .projectai.toml (project config)

[general]
# Logging configuration
log_level = "INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
verbose = false
data_dir = "data"

[ai]
# AI model configuration
model = "gpt-3.5-turbo"  # Default model to use
provider = "openai"       # Provider to use: 'openai' or 'perplexity'
temperature = 0.7         # Creativity level (0.0-1.0)
max_tokens = 256          # Maximum tokens to generate

[security]
# Security features
enable_four_laws = true      # Enable Asimov's Four Laws validation
enable_black_vault = true    # Enable Black Vault for denied content
enable_audit_log = true      # Enable audit logging

[api]
# API configuration
timeout = 30          # Request timeout in seconds
retry_attempts = 3    # Number of retry attempts
