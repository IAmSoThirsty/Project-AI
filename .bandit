[bandit]
# Bandit configuration file
# See: https://bandit.readthedocs.io/en/latest/config.html

# Paths to exclude from scanning
exclude_dirs = 
    /tests,
    /test,
    /.venv,
    /.tox,
    /venv,
    /env,
    /.git,
    /.github,
    /node_modules,
    /__pycache__,
    /.pytest_cache,
    /.hypothesis,
    /build,
    /dist,
    /.eggs,
    /external,
    /web/frontend,
    /android

# File patterns to exclude
exclude = 
    */test_*.py,
    */*_test.py,
    */tests/*,
    */__pycache__/*,
    */.pytest_cache/*

# Tests to skip (comma-separated list of test IDs)
# Example: B101 is assert_used, often used in tests
# B601, B602, B603, B604, B605, B606, B607 are subprocess-related
skips = 

# Severity level: LOW, MEDIUM, HIGH
# Only report issues of this severity or higher
# Commented out to report all severities
# severity = MEDIUM

# Confidence level: LOW, MEDIUM, HIGH  
# Only report issues of this confidence or higher
# Commented out to report all confidence levels
# confidence = MEDIUM

# Test plugins to load
tests = 

# Plugins to exclude
exclude_tests = 

# Maximum number of lines to scan in a file (0 = no limit)
# max_lines = 0
